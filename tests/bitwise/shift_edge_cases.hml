// Test shift operation edge cases

// Left shift
print("=== Left Shift ===");
print("1 << 0: " + (1 << 0));      // 1
print("1 << 1: " + (1 << 1));      // 2
print("1 << 7: " + (1 << 7));      // 128
print("1 << 8: " + (1 << 8));      // 256
print("1 << 16: " + (1 << 16));    // 65536
print("1 << 31: " + (1 << 31));    // Depends on type

// Right shift
print("=== Right Shift ===");
print("256 >> 1: " + (256 >> 1));  // 128
print("256 >> 4: " + (256 >> 4));  // 16
print("256 >> 8: " + (256 >> 8));  // 1
print("256 >> 9: " + (256 >> 9));  // 0

// Shifting by 0 (no change)
print("=== Shift by 0 ===");
print("42 << 0: " + (42 << 0));    // 42
print("42 >> 0: " + (42 >> 0));    // 42

// Shifting 0
print("=== Shifting 0 ===");
print("0 << 5: " + (0 << 5));      // 0
print("0 >> 5: " + (0 >> 5));      // 0

// Chained shifts
print("=== Chained Shifts ===");
print("1 << 4 >> 2: " + (1 << 4 >> 2));  // 16 >> 2 = 4
print("(8 >> 1) << 2: " + ((8 >> 1) << 2));  // 4 << 2 = 16

// Negative number shifts (signed)
print("=== Negative Shifts ===");
let neg: i32 = -1;
print("-1 >> 1: " + (neg >> 1));    // arithmetic shift

// Large values
print("=== Large Values ===");
let big: i64 = 1;
print("1L << 32: " + (big << 32));
print("1L << 62: " + (big << 62));

// Combining with other ops
print("=== Combined Operations ===");
print("(3 << 2) + 1: " + ((3 << 2) + 1));  // 12 + 1 = 13
print("(15 >> 2) * 2: " + ((15 >> 2) * 2)); // 3 * 2 = 6

print("All shift edge case tests passed");
