// Test: Binary read/write
let buf = buffer(10);
let i = 0;
while (i < 10) {
    buf[i] = 65 + i;
    i = i + 1;
}

let fw = open("tests/temp/test_binary.dat", "w");
fw.write_bytes(buf);
fw.close();

let fr = open("tests/temp/test_binary.dat", "r");
let data = fr.read_bytes(10);
fr.close();

print("Length:");
print(data.length);
print("First byte:");
print(data[0]);
print("Last byte:");
print(data[9]);
free(buf);
free(data);
