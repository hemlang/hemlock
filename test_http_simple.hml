// Simple HTTP test
print("Testing exec...");

let result = exec("curl -s http://example.com");
print("Exit code: " + typeof(result.exit_code));
print("Output length: " + typeof(result.output.length));

if (result.exit_code == 0) {
    print("✓ curl works!");
    print("First 100 chars:");
    print(result.output.substr(0, 100));
} else {
    print("✗ curl failed");
}
